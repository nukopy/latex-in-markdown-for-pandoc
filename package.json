{
  "name": "latex-in-markdown-for-pandoc",
  "displayName": "LaTeX in Markdown for Pandoc",
  "publisher": "nukopy",
  "description": "Visual Studio Code extension that brings LaTeX syntax highlighting to Markdown documents processed with Pandoc",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "LaTeX",
    "Markdown",
    "Pandoc",
    "markdown",
    "latex",
    "tex",
    "pandoc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nukopy/latex-in-markdown-for-pandoc.git"
  },
  "scripts": {
    "----- format, lint -----": "",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write",
    "ci": "biome ci",
    "----- test -----": "",
    "test": "echo \"No tests yet\"",
    "----- release -----": "",
    "build": "vsce package -o dist/",
    "login": "vsce login",
    "publish:pre": "vsce publish --pre-release",
    "publish": "vsce publish",
    "unpublish": "vsce unpublish"
  },
  "contributes": {
    "grammars": [
      {
        "scopeName": "pandoc-latex-injection-frontmatter",
        "path": "./syntaxes/pandoc-latex-injection-frontmatter.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      },
      {
        "scopeName": "pandoc-latex-injection-body",
        "path": "./syntaxes/pandoc-latex-injection-body.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/markdown.json"
      },
      {
        "language": "yaml",
        "path": "./snippets/yaml.json"
      }
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.6.2",
    "tsx": "^4.20.6",
    "vsce": "^2.15.0"
  }
}
